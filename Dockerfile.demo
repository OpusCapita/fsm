# Docker context should be "<repo-root>"

FROM node:8.9.4
LABEL maintainer="OpusCapita"

ENV HOST 0.0.0.0
ENV PORT 3020

COPY ./ /demo

WORKDIR /demo

RUN npm i --unsafe-perm

WORKDIR /demo/packages/examples/complete-demo

CMD ["npm", "run", "demo:build", "&&", "npm", "run", "demo:start"]

EXPOSE $PORT